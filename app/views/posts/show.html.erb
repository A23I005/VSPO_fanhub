<!-- app/views/posts/show.html.erb -->
<div class="border p-4 rounded shadow">
  <h1 class="text-xl font-bold mb-2"><%= @post.title %></h1>
  <p class="mb-4"><%= @post.body %></p>

  <% if @post.likes.exists?(user: current_user) %>
    <%= button_to 'いいね解除', post_like_path(@post), method: :delete, class: "bg-red-500 text-white px-3 py-1 rounded" %>
  <% else %>
    <%= button_to 'いいね', post_like_path(@post), method: :post, class: "bg-blue-500 text-white px-3 py-1 rounded" %>
  <% end %>

  <p class="mt-2 text-sm text-gray-600">
    <%= @post.likes.count %> 件のいいね
  </p>
</div>